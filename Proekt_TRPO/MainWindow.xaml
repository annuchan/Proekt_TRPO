<Window x:Class="Proekt_TRPO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proekt_TRPO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#f6fff8">
        <StackPanel Margin="20" Background="#eaf4f4">
            <Label HorizontalAlignment="Center" FontSize="25" Foreground="#6b9080">Авторизация</Label>
            <Label FontSize="15" Foreground="#6b9080">Имя пользователя:</Label>
            <TextBox x:Name="usernameTextBox" Padding="10" Background="#cce3de" />
            <Label FontSize="15" Foreground="#6b9080">Пароль:</Label>
            <PasswordBox x:Name="passwordBox" Padding="10" Background="#cce3de" />
            <Button Content="Войти" Click="Login_Click" Background="#a4c3b2" Margin="250 10 250 10" Padding="5" />
        </StackPanel>
    </Grid>
</Window>
